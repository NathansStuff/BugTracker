
<div class='login-background'>
    <div class='login-container'>
      <h1>Bug Tracker</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login-form-control">

          <%= f.text_field :login, autofocus: true, autocomplete: "email", class: 'login-input' %>
          <label>Username or Email</label>
        </div>

        <div class="login-form-control">

          <%= f.password_field :password, autocomplete: "current-password", class: 'login-input' %>
          <label>Password</label>
        </div>


        <% if devise_mapping.rememberable? %>
          <div class="devise-links">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Log in", class: 'login-btn' %>
        </div>
      <% end %>

     <div class='devise-links'>
        <%= link_to "Sign up", new_registration_path(resource_name), class: 'devise-links' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'devise-links' %>
      </div>
  </div>
  </div>
</div>

<%= javascript_pack_tag 'login', 'data-turbolinks-track': 'reload' %>
